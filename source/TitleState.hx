	override function beatHit()
	{
		super.beatHit();

		trace("beat did get hit");

		if(logoBl != null)
			logoBl.animation.play('bump', true);

		if(gfDance != null) {
			danceLeft = !danceLeft;
			if (danceLeft)
				gfDance.animation.play('danceRight');
			else
				gfDance.animation.play('danceLeft');
		}

		if(!closedState) {
			sickBeats++;
			if (!doubletime)
			{
				FlxG.camera.angle = 10;
				FlxTween.tween(FlxG.camera, {angle: 0}, 0.3, {ease:FlxEase.cubeOut});
			}
			switch (sickBeats)
			{
				case 2:
					createCoolText(['headshotsniper'], 0);
				case 3:
					deleteCoolText();
					createCoolText(['headshotsniper presents'], 0);
				case 4:
					deleteCoolText();
					createCoolText(['Psych Engine by'], 0);
				case 5:
					addMoreText('Shadow Mario, RiverOaken and shubs', 0);
				case 6:
					deleteCoolText();
					createCoolText(['Not associated with'], 0);
				// credTextShit.text += '\nNewgrounds';
				case 7:
					addMoreText('Newgrounds', 0);
				case 8:
					deleteCoolText();
			}
		}
	}
